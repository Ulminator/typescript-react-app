{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "concurrently \"npm run build-server\" \"npm run build-client\"",
    "build-server": "tsc",
    "build-client": "npm run build --prefix ../client",
    "prestart": "npm run build",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "NODE_ENV=production node ./build/index.js",
    "client": "serve -s ../client/build -p 3000",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "NODE_ENV=development nodemon src/index.ts --watch ./src --exec ts-node",
    "dev-client": "npm run start --prefix ../client",
    "test": "NODE_ENV=test mocha -r ts-node/register test/**/*.spec.ts"
  },
  "keywords": [],
  "author": "Ulminator",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.9",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "serve": "^10.1.1",
    "ts-node": "^7.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "concurrently": "^4.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "typescript": "^3.1.6"
  }
}
